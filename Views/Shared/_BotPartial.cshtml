<!-- _BotPartial.cshtml -->
<div id="botContainer" class="bot-container">
    <div id="bot" class="bot bg-primary text-white">
        <div id="botIcon" class="bot-icon">
            <img src="~/images/bot.png" alt="Bot Icon">
        </div>
    </div>
    <div id="chatWindow" class="chat-window collapse">
        <div class="card">
            <div class="card-header bg-primary text-white">
                Chat Bot
                <button type="button" class="close text-white" data-toggle="collapse" data-target="#chatWindow">
                    <span>&times;</span>
                </button>
            </div>
            <div class="card-body" id="messagesList">
                <!-- Messages will appear here -->
            </div>
            <div class="card-footer">
                <div class="input-group">
                    <input type="text" id="messageInput" class="form-control" placeholder="Type a message...">
                    <div class="input-group-append">
                        <button class="btn btn-primary" id="sendMessageButton">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Pass the logged-in user's name and role to JavaScript
    var loggedInUser = "@User.Identity.Name";
    var isAdmin = @User.IsInRole("Admin").ToString().ToLower(); // Convert to lowercase for JavaScript
</script>

<style>
    .bot-container {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
        /* Ensure it's above other content */
    }

    .bot {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .bot-icon img {
        width: 40px;
        height: 40px;
    }

    .chat-window {
        position: absolute;
        bottom: 70px;
        right: 0;
        width: 300px;
    }

    #messagesList {
        max-height: 200px;
        overflow-y: auto;
    }
</style>
